# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# App routes
GET     /                           controllers.Application.index
GET     /signin                     controllers.Application.signin
GET     /signup                     controllers.Application.signup
GET     /user/:id                   controllers.Application.profile(id: String)
GET     /mentor                     controllers.Application.mentor
GET     /edit/session/:id           controllers.Application.edit(id: String)

# Ontology service routes
GET     /api/ontology/search        arckane.ontology.OntologyApi.search

# Users service routes
POST    /api/users/props            arckane.users.UsersApi.setProp
GET     /api/users/props            arckane.users.UsersApi.getProps
POST    /api/users/signup           arckane.users.UsersApi.signup
POST    /api/users/signin           arckane.users.UsersApi.signin
GET     /api/users/signout          arckane.users.UsersApi.signout

# Schedules service routes
GET     /api/schedules/session/:id              arckane.schedules.SchedulesApi.getSessionInfo(id: String)
GET     /api/schedules/allsessions              arckane.schedules.SchedulesApi.getMentorSessions
GET     /api/schedules/delete/session/:id       arckane.schedules.SchedulesApi.deleteSession(id: String)
GET     /api/schedules/editdata/session/:id     arckane.schedules.SchedulesApi.getSessionEditData(id: String)
POST    /api/schedules/session                  arckane.schedules.SchedulesApi.createSession
POST    /api/schedules/update/session/:id       arckane.schedules.SchedulesApi.setProp(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
