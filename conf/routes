# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
POST    /signin                     controllers.Application.signin
GET     /signout                    controllers.Application.signout

# Front-end API
GET     /api/skill/data             controllers.FrontendApi.skillInfo

GET     /api/skillbook/data         controllers.FrontendApi.skillbookInfo
GET     /api/skillbook/subsection/data controllers.FrontendApi.skillbookSubsection
POST    /api/skillbook/name         controllers.FrontendApi.changeSkillbookName
POST    /api/skillbook/name         controllers.FrontendApi.changeSkillbookName
POST    /api/skillbook/skill        controllers.FrontendApi.addSkillToSkillbook
PUT     /api/skillbook/skill        controllers.FrontendApi.changeSkillInSkillbook
DELETE  /api/skillbook/skill        controllers.FrontendApi.deleteSkillInSkillbook
DELETE  /api/skillbook              controllers.FrontendApi.deleteSkillbook

GET     /api/search                 controllers.FrontendApi.search
GET     /api/search/skill           controllers.FrontendApi.searchSkill
GET     /api/search/availability    controllers.FrontendApi.searchAvailability

POST    /api/propose/skill          controllers.FrontendApi.proposeSkill
POST    /api/propose/skillbook      controllers.FrontendApi.proposeSkillbook
POST    /api/propose/resource       controllers.FrontendApi.proposeResource

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
